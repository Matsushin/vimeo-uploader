- {notice: 'alert alert-info', alert: 'alert alert-warning'}.each do |type, class_str|
  - msg = self.send(type)
  - if msg.present?
    %div{style: 'position: relative; margin-bottom: 32px;'}
      .alert-message{:class => class_str}
        %a.close{href: '#', data: { dismiss: 'alert' }} x
        %p= t(msg) || msg
